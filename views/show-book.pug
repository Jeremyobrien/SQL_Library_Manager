extends layout 

block main 
    p
        table
            thead
                tr
                    th Title
                    th Author
                    th Genre
                    th Year
            tbody
                tr
                    td= book.title
                    td= book.author
                    td= book.genre
                    td= book.year
    a(href="../") &larr; Back
    | |
    a(href="/books/" + book.id + "/edit") Edit Details
    | | 
    a(href="/books/" + book.id + "/delete") Delete Book